@model ApplicationCore.Models.MovieDetailsResponseModel;
@using System.Globalization;
@using ApplicationCore.Entities

@{
  ViewData["Title"] = "Details";
  // ViewBag.Title = "title";
  // Layout = "_Layout";
}

<div class="container-fluid bg-dark">
  <div class="row">
    <div class="col">
      <img src="@Model.PosterUrl" alt="@Model.Title"/>
      
    </div>
    <div class="col-6">
      <div class="row mt-3">
        <div class="col-12">
          <h1 class="text-white">
            @Model.Title
          </h1>
          <p class="text-muted">
            @Model.Tagline
          </p>
        </div>
      </div>
      <div class="row">
        <div class="col-6 col-md-4 text-muted">
          @Model.RunTime | @Model.ReleaseDate.Value.Date.Year
        </div>
        <a href="#" class="badge badge-dark">
          @foreach (var genre in Model.Genres)
          {
            <div>
              @genre.Name
            </div>
          }
        </a>
      </div>
      <div class="row">
        <span class="badge badge-pill badge-success">
          @Model.Rating
        </span>
      </div>
      <div class="row text-white">
        <div clas="col-12">
          @Model.Overview
        </div>
      </div>
    </div>
    <div class="col mr-3 mt-5">
      <button asp-area="" type="button" class="btn btn-primary bg-dark btn-outline-light btn-block btn-sm">
        <i class="far fa-edit"></i>
        REVIEW
      </button>
      <button asp-area="" type="button" class="btn btn-secondary btn-outline-dark bg-white btn-block btn-sm ">
        BUY @Model.Price
      </button>
    </div>
  </div>
</div>

<div class="container-fluid mt-3">
  <div class="row">
      <div class="col-4">
        <h5 class="mb-3">MOVIE FACT</h5>
        <ul class="list-group">
          <li class="list-group-item">
            Release Date
            <span class="badge badge-pill badge-dark">
              @Model.ReleaseDate.Value.ToShortDateString()
            </span>
          </li>
          <li class="list-group-item">
            Run Time
            <span class="badge badge-pill badge-dark">
              @Model.RunTime.Value.ToString()
            </span>
          </li>
          <li class="list-group-item">
            Box Office
            <span class="badge badge-pill badge-dark">
              @Model.Revenue.Value.ToString()
            </span>
          </li>
          <li class="list-group-item">
            Budget
            <span class="badge badge-pill badge-dark">
              @Model.Budget
            </span>
          </li>
        </ul>
        
        <h5 class="mt-lg-5">TRAILERS</h5>
        <button asp-area="" type="button" class="btn btn-light btn-block btn-sm">
          <i class="far fa-edit"></i>
          @Model.Title
        </button>
      </div>
  
    <div class="col ml-lg-5">
      <h5>CAST</h5>
      <table>
        @foreach (var cast in Model.Casts)
        {<tr>
           <td>
             <img src="@cast.ProfilePath " alt="@cast.Name" class="rounded-circle mr-5 ml-lg-4" width="50" />
           </td>
           <td>@cast.Name</td>
         </tr>
        }
      </table>
    </div>
  </div>
</div>

