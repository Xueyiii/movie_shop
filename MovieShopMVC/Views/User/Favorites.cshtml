@model IEnumerable<ApplicationCore.Models.MovieCardResponseModel>;

@{
    ViewData["Title"] = "Favorites";
    // ViewBag.Title = "title";
    // Layout = "_Layout";
}

<h2>Favorites</h2>
<form asp-controller="User" asp-action="Favorites">
    <h2>Purchase</h2>
    <div class="rounded">
        <div class="container-fluid">
            <div class="row">
                @foreach (var movie in Model)
                {
                    <div class="col-xl-2 col-sm-4 col-lg-3">
                        <partial name="_MovieCard" model="movie"/>
                    </div>
                }
            </div>
        </div>
    </div>
    }
</form>